{{>layout/header}}
    <h1>SpringBoot Web Services Demo</h1>
    <div class="col-md-12">
        <!--로그인 기능 영역-->
        <div class="row">
            <div class="col-md-6">
                <a href="/post/create" role="button" class="btn btn-primary">글 등록</a>
                {{#user_name}}
                    Logged in as : <span id="user">{{user_name}}</span>
                    <a href="/logout" class="btn btn-info active" role="button">Logout</a>
                {{/user_name}}
                {{^user_name}}
                    <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google Login</a>
                    <a href="/oauth2/authorization/naver" class="btn btn-success active" role="button">Naver Login</a>
                    <!--<a href="/oauth2/authorization/kakao" class="btn btn-success active" role="button">Kakao Login</a>-->
                {{/user_name}}
            </div>
        </div>
    </div>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thread-strong">
            <tr>
                <th>게시글번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>최종수정일</th>
            </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/post/detail/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedAt}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
{{>layout/footer}}
